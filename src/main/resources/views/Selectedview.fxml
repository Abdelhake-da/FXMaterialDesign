<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXCheckBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefWidth="270.0" spacing="5.0" style="-fx-background-color: #FFF;" stylesheets="@../css/selectedview.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label alignment="CENTER" contentDisplay="CENTER" styleClass="title" text="Social Media">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <VBox alignment="CENTER_LEFT" spacing="5.0">
         <children>
            <JFXCheckBox prefHeight="28.0" prefWidth="248.0" styleClass="check-social" text="Facebook ">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <cursor>
                  <Cursor fx:constant="DISAPPEAR" />
               </cursor>
            </JFXCheckBox>
            <JFXCheckBox prefHeight="28.0" prefWidth="248.0" styleClass="check-social" text="Twitter">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <cursor>
                  <Cursor fx:constant="DISAPPEAR" />
               </cursor>
            </JFXCheckBox>
            <JFXCheckBox prefHeight="28.0" prefWidth="248.0" styleClass="check-social" text="Instagram">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <cursor>
                  <Cursor fx:constant="DISAPPEAR" />
               </cursor>
            </JFXCheckBox>
            <JFXCheckBox prefHeight="28.0" prefWidth="248.0" styleClass="check-social" text="LinkedIn">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <cursor>
                  <Cursor fx:constant="DISAPPEAR" />
               </cursor>
            </JFXCheckBox>
            <JFXCheckBox prefHeight="28.0" prefWidth="248.0" styleClass="check-social" text="GitHub">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <cursor>
                  <Cursor fx:constant="DISAPPEAR" />
               </cursor>
            </JFXCheckBox>
         </children>
         <opaqueInsets>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </opaqueInsets>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </VBox>
      <Separator>
         <VBox.margin>
            <Insets bottom="10.0" top="15.0" />
         </VBox.margin></Separator>
      <HBox alignment="CENTER_RIGHT" spacing="5.0">
         <children>
            <JFXButton styleClass="btn" text="Cancel" textFill="#d04444">
               <font>
                  <Font size="18.0" />
               </font>
            </JFXButton>
            <JFXButton styleClass="btn" text="Choose" textFill="#13bf58">
               <font>
                  <Font size="18.0" />
               </font>
            </JFXButton>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
   </padding>
</VBox>
